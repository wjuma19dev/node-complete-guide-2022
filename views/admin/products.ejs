<%- include("../partials/head") %>

  <%- include("../partials/navegation") %>

  <div class="container">
    <div class="row mt-3">
      <div class="col-12">
        <h1 class="mb-0 display-4"><%= docTitle %></h1>
        <p class="lead">List of all products</p>
      </div>
    </div>
    <div class="row">

      <% if(products.length > 0) { %>
        <% for(product of products) { %>
        <div class="col-md-3">
          <div class="card admin">
            <div class="admin__imagen__box">
              <div class="row buttons">
                <div class="col-md-12 d-flex flex-column justify-content-center align-items-end gap-2">
                  <button class="btn btn-light btn-border-radius"><i class="bi bi-share"></i></button>
                  <button class="btn btn-light btn-border-radius"><i class="bi bi-heart"></i></button>

                  <!-- Delete product -->
                  <form action="/admin/delete-product" method="POST">
                    <button type="submit" class="btn btn-light btn-border-radius text-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                    <input type="hidden" name="productId" value="<%= product.id %>">
                  </form>

                </div>
              </div>
              <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.title %>">
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= product.title.slice(0, 60) %> <span class="text-dark"> ...</span></h5>
              <p class="card-text"><%= product.description.slice(0, 60) %> <span class="text-ligth">...</span></p>
              <div class="d-flex justify-content-between align-items-center">
                <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn btn-primary">
                  <i class="bi bi-pen text-light"></i>
                  Edit</a>
                <p class="mb-0"><strong class="text-primary">Show more</strong></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      <% } else { %>
      <div class="col-md-6">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <div>
            <i class="bi bi-exclamation-triangle-fill"></i>
            No hay productos para mostrar, <a class="alert-link" href="/admin/add-product">puedes agregar un producto!</a>
          </div>
        </div>
      </div>
      <% } %>

    </div>
  </div>
  
<%- include("../partials/script") %>    